<Window x:Class="ChatAppRealTime.EmojiViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppRealTime"
        mc:Ignorable="d"  
                             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
       Title="Tổng hợp Emoji" Height="450" Width="300">
    <WrapPanel >
        <WrapPanel.Resources>
            <Style TargetType="emoji:TextBlock">
                <Setter Property="FontSize" Value="50"/>
                <EventSetter Event="MouseDown" Handler="Emoji_MouseDown"/>
            </Style>
        </WrapPanel.Resources>
        <emoji:TextBlock Text="💖"/>
            <emoji:TextBlock Text="😁"/>
            <emoji:TextBlock Text="🐨"/>
            <emoji:TextBlock Text="🐱‍"/>
            <emoji:TextBlock Text="🐉"/>
            <emoji:TextBlock Text="👩🏿‍👩🏻‍👦🏽"/>
            <emoji:TextBlock Text="💖"/>
 
    </WrapPanel>
</Window>
