<Page x:Class="ChatAppRealTime.ChatRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppRealTime"
        mc:Ignorable="d"                               xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
Height="700" Width="auto"
                             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        Title="ChatRoom">
    <Page.Background>
        <SolidColorBrush Color="Black" />
    </Page.Background>
    <Grid x:Name="grdContainer">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <ScrollViewer Name="sclchat" VerticalScrollBarVisibility="Auto" >

                <Grid x:Name="grdchat" Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
            <TextBox x:Name="txtchat" Grid.Row="1">
                <TextBox.Template>
                    <ControlTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.9*"/>
                                <ColumnDefinition Width="0.1*"/>
                            </Grid.ColumnDefinitions>
                            <emoji:TextBox BorderBrush="White" BorderThickness="5" KeyUp="txtchat_KeyUp"  Text="Nhấn để trò chuyện.."  TextWrapping="Wrap" LostFocus="txtchat_LostFocus" GotFocus="txtchat_GotFocus" Name="chatchild" Grid.Column="0"></emoji:TextBox>
                            <ui:Button Grid.Column="1" Content="😀"  VerticalAlignment="Stretch" Background="Orange" Name="BtnEmoji" Click="BtnEmoji_Click"></ui:Button>
                           
                        </Grid>
                    </ControlTemplate>
                    
                </TextBox.Template>
            </TextBox>
            <Button Grid.Row="1"  VerticalAlignment="Stretch" Click="btnsend_Click" Grid.Column="1" Name="btnsend" Background="red">
                Gửi &#8594;
            </Button>
            <TextBlock Grid.Row="0" Grid.Column="1">Đang hoạt động</TextBlock>
            <ScrollViewer Margin="0 15 0 0" Grid.Row="0" Grid.Column="1" x:Name="sclonl" VerticalScrollBarVisibility="Auto" >

                <ListBox x:Name="lstonl" Margin="0 15 0 0" Grid.Row="0" Grid.Column="1" Foreground="Black">
                </ListBox>
            </ScrollViewer>
        </Grid>
    </Grid>
    </Page>
