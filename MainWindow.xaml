<adonisControls:AdonisWindow x:Class="ChatAppRealTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:local="clr-namespace:ChatAppRealTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" TitleBarForeground="Blue" TitleBarBackground="Aqua" WindowButtonHighlightBrush="Black">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Window.Resources>
        <!-- .... other resources .... -->

        <!--A Style that affects all TextBlocks-->
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!--A Style that extends the previous TextBlock Style with an x:Key of TitleText-->
        <Style BasedOn="{StaticResource {x:Type TextBlock}}"
           TargetType="TextBlock"
           x:Key="TitleText">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0.0" Color="#90DDDD" />
                            <GradientStop Offset="1.0" Color="#5BFFFF" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#222">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TitleText}" Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="Chat App ^^" FontSize="36" FontFamily="Times New Roman" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Grid.ColumnSpan="1" Grid.RowSpan="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="25" Margin="10,10,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Grid.ColumnSpan="1" Grid.RowSpan="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="25" Margin="10,50,0,0" TextChanged="TextBox_TextChanged"/>
        <TextBlock  Style="{StaticResource TitleText}" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="Tài khoản:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" FontWeight="Bold" FontFamily="Times New Roman" FontSize="20"/>
        <TextBlock Style="{StaticResource TitleText}" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="Mật khẩu:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,10,0" FontWeight="Bold" FontFamily="Times New Roman" FontSize="20"/>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Background="red" Foreground="Blue">Đăng nhập</Button>
    </Grid>
    </adonisControls:AdonisWindow>
